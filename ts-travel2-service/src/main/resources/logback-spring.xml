<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with New Relic JSON encoder -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="com.newrelic.logging.logback.NewRelicEncoder"/>
    </appender>

    <!-- New Relic async appender for automatic log forwarding -->
    <appender name="ASYNC" class="com.newrelic.logging.logback.NewRelicAsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC"/>
    </root>

    <!-- Application specific loggers -->
    <logger name="travel2service" level="DEBUG"/>
    <logger name="travel2service.controller" level="DEBUG"/>
    <logger name="travel2service.service" level="DEBUG"/>
</configuration>
